{
  "name": "t-req",
  "description": "A monorepo for t-req: HTTP request parsing, execution, and testing",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "biome format --write .",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build --filter=@t-req/core --filter=@t-req/app && changeset publish"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.5",
    "typescript": "^5.0.0"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/core"
  ]
}
