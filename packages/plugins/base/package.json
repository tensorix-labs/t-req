{
  "name": "@t-req/plugin-base",
  "version": "0.1.1",
  "description": "Base resolvers for t-req (uuid, timestamp, base64, etc.)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tensorix-labs/t-req",
    "directory": "packages/plugins/base"
  },
  "homepage": "https://github.com/tensorix-labs/t-req#readme",
  "bugs": {
    "url": "https://github.com/tensorix-labs/t-req/issues"
  },
  "keywords": [
    "t-req",
    "plugin",
    "resolvers",
    "uuid",
    "timestamp",
    "base64"
  ],
  "author": "tensorix labs",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build --target node --minify --sourcemap --outdir ./dist --root ./src ./src/index.ts",
    "build:types": "tsc -p tsconfig.build.json",
    "check-types": "tsc -p tsconfig.build.json --noEmit",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepublishOnly": "bun run build && bun run test"
  },
  "peerDependencies": {
    "@t-req/core": "^0.2.4"
  },
  "devDependencies": {
    "@t-req/core": "workspace:*",
    "@types/bun": "latest"
  }
}
