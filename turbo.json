{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "tsconfig.build.json", "package.json"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "test/**", "tsconfig.json", "package.json"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "test/**", "tsconfig.json", "package.json"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "test/**", "tsconfig.json", "package.json"]
    },
    "lint": {
      "inputs": ["src/**", "test/**", "biome.json", "package.json"]
    },
    "check-types": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "test/**", "tsconfig.json", "package.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
