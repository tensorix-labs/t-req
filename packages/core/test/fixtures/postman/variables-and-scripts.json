{
  "info": {
    "name": "Variables and Scripts"
  },
  "variable": [
    { "key": "host", "value": "api.example.com" },
    { "key": "token", "value": "abc123" }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": ["pm.environment.set('foo', 'bar');"]
      }
    },
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": []
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": ["pm.test('status', function() {});"]
      }
    }
  ],
  "item": [
    {
      "name": "Script Folder",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": ["console.log('folder script');"]
          }
        }
      ],
      "item": [
        {
          "name": "Scripted Request",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["console.log('request script');"]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "https://{{host}}/users",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    }
  ]
}
