{
  "name": "t-req",
  "description": "A monorepo for t-req: HTTP request parsing, execution, and testing",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "biome format --write .",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release:tag": "bun run script/release.ts",
    "release:app": "bun run script/release.ts --package app",
    "release:core": "bun run script/release.ts --package core",
    "release:sdk": "bun run script/release.ts --package sdk",
    "release:plugin-base": "bun run script/release.ts --package plugin-base",
    "release:plugin-assert": "bun run script/release.ts --package plugin-assert",
    "sst:dev": "sst dev",
    "sst:deploy": "sst deploy",
    "sst:deploy:prod": "sst deploy --stage production"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.27.0",
    "@tsconfig/bun": "^1.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "sst": "^3.17.37",
    "turbo": "^2.7.5",
    "typescript": "^5.0.0",
    "undici-types": "^7.19.0"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "packages/*",
    "packages/plugins/*",
    "packages/sdk/*",
    "examples/core"
  ]
}
