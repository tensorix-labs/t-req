{
  "name": "@t-req/ui",
  "private": true,
  "version": "0.1.0",
  "description": "Shared UI components and Tailwind configuration for t-req",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tensorix-labs/t-req",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/tensorix-labs/t-req#readme",
  "bugs": {
    "url": "https://github.com/tensorix-labs/t-req/issues"
  },
  "keywords": [
    "tailwind",
    "ui",
    "theme",
    "t-req",
    "http",
    "components"
  ],
  "author": "tensorix labs",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./styles": {
      "types": "./src/styles/styles.d.ts",
      "default": "./src/styles/base.css"
    },
    "./tailwind": "./tailwind.config.ts",
    "./fonts": {
      "types": "./src/styles/styles.d.ts",
      "default": "./src/styles/fonts.css"
    }
  },
  "files": [
    "dist",
    "tailwind.config.ts",
    "src/styles/fonts.css",
    "src/styles/styles.d.ts"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types && bun run build:css",
    "build:js": "bun build --target browser --minify --sourcemap --outdir ./dist ./src/index.ts",
    "build:types": "tsc -p tsconfig.build.json",
    "build:css": "bunx @tailwindcss/cli -i ./src/styles/base.css -o ./dist/styles/base.css --minify"
  },
  "dependencies": {
    "@fontsource/inter": "^5.1.1",
    "@fontsource/jetbrains-mono": "^5.2.8"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0",
    "@tailwindcss/vite": "^4.1.0",
    "daisyui": "^5",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.0.0"
  }
}
