---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
import FAQAccordion from "../components/FAQAccordion.astro";

const faqItems = [
  {
    question: "How is enterprise different from the open-source version?",
    answer:
      "The open-source version includes the core t-req library, CLI, and TUI. Enterprise adds self-hosted deployment options, centralized secrets management integration, audit logging, SSO/SAML, team collaboration features, and dedicated support with SLA guarantees.",
  },
  {
    question: "Can we run t-req in an air-gapped environment?",
    answer:
      "Yes. Enterprise deployments can run entirely within your infrastructure with no external network dependencies. We provide container images and deployment guides for air-gapped environments.",
  },
  {
    question: "How does licensing work?",
    answer:
      "Enterprise licenses are based on the number of users. We offer annual subscriptions with volume discounts. Contact us for a custom quote based on your organization's needs.",
  },
];

const enterpriseFeatures = [
  {
    feature: "Self-Hosted Deployment",
    description:
      "Run entirely within your infrastructure. Air-gapped environments fully supported.",
  },
  {
    feature: "Centralized Secrets",
    description:
      "Integrate with HashiCorp Vault, AWS Secrets Manager, 1Password, or Azure Key Vault.",
  },
  {
    feature: "Audit Logging",
    description:
      "Full request/response logging for compliance. Export to SIEM, webhook, or syslog.",
  },
  {
    feature: "Team Sync",
    description: "Shared environments, collections, and real-time presence.",
  },
  {
    feature: "SSO & RBAC",
    description: "SAML 2.0, OIDC, Okta, Azure AD. Role-based access control.",
  },
  {
    feature: "Dedicated Support",
    description:
      "Priority support with SLA guarantees. Direct access to engineering.",
  },
];
---

<Layout title="Enterprise - t-req">
  <!-- Header -->
  <header
    class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between border-b border-treq-border-light"
  >
    <a href="/" aria-label="t-req home">
      <img src="/logo.jpg" alt="t-req" class="h-8 w-auto" />
    </a>
    <nav class="flex items-center gap-6">
      <a
        href="/docs/getting-started"
        class="text-treq-text-strong hover:text-treq-accent transition-colors text-sm font-semibold"
      >
        Docs
      </a>
      <a href="/enterprise" class="text-treq-accent text-sm font-semibold">
        Enterprise
      </a>
      <a
        href="https://github.com/tensorix-labs/t-req"
        target="_blank"
        rel="noopener noreferrer"
        class="text-treq-text-strong hover:text-treq-accent transition-colors"
        aria-label="GitHub"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </a>
    </nav>
  </header>

  <main class="max-w-5xl mx-auto px-6">
    <!-- Hero Section with Form -->
    <section class="hero-section">
      <div class="hero-content">
        <span class="enterprise-badge">Enterprise</span>
        <h1 class="hero-title">Your API Tests. Your Infrastructure.</h1>
        <p class="hero-subtitle">
          Deploy t-req on your own infrastructure. Use your test framework, your
          language, your git workflow. No proprietary DSL, no vendor lock-in, no
          data leaving your network.
        </p>
        <a href="/docs/getting-started" class="btn-secondary"
          >View Documentation</a
        >
      </div>
      <div class="hero-form">
        <h2 class="form-title">Talk to Our Team</h2>
        <ContactForm />
      </div>
    </section>

    <!-- Enterprise Features Table -->
    <section class="py-16">
      <h2 class="section-title">Enterprise Features</h2>
      <p class="section-subtitle">
        Everything you need to deploy API testing at scale.
      </p>

      <div class="table-wrapper">
        <table class="features-table">
          <thead>
            <tr>
              <th>Feature</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            {
              enterpriseFeatures.map((item) => (
                <tr>
                  <td class="feature-name">{item.feature}</td>
                  <td class="feature-desc">{item.description}</td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <FAQAccordion items={faqItems} />
    </section>

    <hr class="border-treq-border-light my-8" />

    <footer class="py-12 text-center text-sm text-treq-text-muted">
      &copy; {new Date().getFullYear()}
      <a
        href="https://www.tensorixlabs.com/"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-treq-text-strong transition-colors">tensorix-labs</a
      >
    </footer>
  </main>

  <style>
    /* Hero section - two columns */
    .hero-section {
      display: grid;
      gap: 3rem;
      padding-top: 4rem;
      padding-bottom: 4rem;
      align-items: start;
    }

    @media (min-width: 768px) {
      .hero-section {
        grid-template-columns: 1fr 400px;
        gap: 4rem;
        padding-top: 5rem;
        padding-bottom: 5rem;
      }
    }

    .hero-content {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .enterprise-badge {
      display: inline-block;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #f97316;
      background: #fff7ed;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      border: 1px solid #fed7aa;
    }

    .hero-title {
      font-size: 2.25rem;
      font-weight: 800;
      letter-spacing: -0.04em;
      line-height: 1.1;
      color: #0f172a;
      margin: 0;
    }

    @media (min-width: 768px) {
      .hero-title {
        font-size: 2.75rem;
      }
    }

    .hero-subtitle {
      font-size: 1rem;
      line-height: 1.7;
      color: #475569;
      margin: 0;
    }

    .hero-form {
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      padding: 1.5rem;
    }

    .form-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: #0f172a;
      margin: 0 0 1.25rem 0;
    }

    .btn-secondary {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border-radius: 0.5rem;
      border: 1px solid #e2e8f0;
      padding: 0.625rem 1rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: #475569;
      text-decoration: none;
      transition: all 0.15s ease;
      background: white;
      margin-top: 0.5rem;
    }

    .btn-secondary:hover {
      border-color: #cbd5e1;
      color: #0f172a;
    }

    /* Section typography */
    .section-title {
      font-size: 1.5rem;
      font-weight: 700;
      letter-spacing: -0.025em;
      color: #0f172a;
      text-align: center;
      margin-bottom: 0.5rem;
    }

    .section-subtitle {
      font-size: 0.9375rem;
      color: #64748b;
      text-align: center;
      max-width: 36rem;
      margin: 0 auto 2rem;
    }

    /* Tables */
    .table-wrapper {
      max-width: 700px;
      margin: 0 auto;
      overflow-x: auto;
    }

    .comparison-table,
    .features-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9375rem;
    }

    .comparison-table th,
    .features-table th {
      text-align: left;
      padding: 12px 16px;
      font-weight: 600;
      font-size: 0.8125rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
      border-bottom: 2px solid #e2e8f0;
    }

    .comparison-table th:last-child {
      color: #f97316;
    }

    .comparison-table td,
    .features-table td {
      padding: 14px 16px;
      border-bottom: 1px solid #e2e8f0;
      line-height: 1.5;
    }

    .comparison-table tr:last-child td,
    .features-table tr:last-child td {
      border-bottom: none;
    }

    .comparison-table .competitor {
      color: #94a3b8;
    }

    .comparison-table .treq {
      color: #0f172a;
      font-weight: 500;
    }

    .features-table .feature-name {
      font-weight: 600;
      color: #0f172a;
      white-space: nowrap;
    }

    .features-table .feature-desc {
      color: #475569;
    }
  </style>
</Layout>
