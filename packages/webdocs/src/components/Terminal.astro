---
interface Props {
  lines: Array<{
    prompt?: boolean;
    text: string;
    delay?: number;
  }>;
}

const { lines } = Astro.props;
---

<div class="terminal">
  <div class="terminal-header">
    <div class="terminal-buttons">
      <span class="terminal-btn terminal-btn-close"></span>
      <span class="terminal-btn terminal-btn-minimize"></span>
      <span class="terminal-btn terminal-btn-maximize"></span>
    </div>
    <span class="terminal-title">Terminal</span>
  </div>
  <div class="terminal-body">
    {lines.map((line, index) => (
      <div
        class={`terminal-line ${line.prompt ? 'terminal-prompt' : 'terminal-output'}`}
        style={`--delay: ${index * 1.2}s`}
      >
        {line.prompt && <span class="prompt-symbol">$</span>}
        <span class="line-text">{line.text}</span>
        {line.prompt && <span class="cursor"></span>}
      </div>
    ))}
  </div>
</div>

<style>
  .terminal {
    background: #1a1a1a;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    max-width: 600px;
    margin: 0 auto;
  }

  .terminal-header {
    background: #2d2d2d;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .terminal-buttons {
    display: flex;
    gap: 8px;
  }

  .terminal-btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-btn-close {
    background: #ff5f57;
  }

  .terminal-btn-minimize {
    background: #ffbd2e;
  }

  .terminal-btn-maximize {
    background: #28c840;
  }

  .terminal-title {
    color: #808080;
    font-size: 13px;
    flex: 1;
    text-align: center;
    margin-right: 52px;
  }

  .terminal-body {
    padding: 20px;
    min-height: 180px;
  }

  .terminal-line {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
    animation-delay: var(--delay);
  }

  .terminal-prompt {
    color: #f4f4f5;
  }

  .terminal-output {
    color: #a1a1aa;
  }

  .prompt-symbol {
    color: #22c55e;
    font-weight: 600;
  }

  .line-text {
    white-space: nowrap;
    font-size: 14px;
  }

  .cursor {
    display: inline-block;
    width: 8px;
    height: 18px;
    background: #f97316;
    animation: blink 1s step-end infinite;
    margin-left: 2px;
    opacity: 0;
  }

  .terminal-line:last-child .cursor {
    opacity: 1;
    animation-delay: calc(var(--delay) + 0.3s);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes blink {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  /* Highlight specific commands */
  .terminal-line :global(.cmd) {
    color: #f97316;
  }

  .terminal-line :global(.arg) {
    color: #22c55e;
  }

  .terminal-line :global(.success) {
    color: #22c55e;
  }
</style>
